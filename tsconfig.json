{
    "compileOnSave": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/pages/*": ["pages/*"],
            "@/components/*": ["components/*"],
            "@/services/*": ["services/*"],
            "@/store/*": ["store/*"],
            "@/util/*": ["util/*"],
            "@/types/*": ["types/*"],
            "@/tests/*": ["__tests__/*"],
            "@/public/*": ["../public/*"],
            "@/slices/*": ["slices/*"],
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "additional.d.ts",
        "node_modules/@types/jest",
        "jest.config.ts",
        "jest.setupFiles.js",
        "jest.setupFilesAfterEnv.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
